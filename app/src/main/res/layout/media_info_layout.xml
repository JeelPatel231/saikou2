<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/mean_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mean Score" />


            <TextView
                android:id="@+id/mean_score_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="6.6 / 10" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mean_score_text"
                android:text="Status" />


            <TextView
                android:id="@+id/status_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mean_score_text"
                android:layout_alignParentEnd="true"
                android:text="Releasing" />

            <TextView
                android:id="@+id/total_media_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_text"
                android:text="@string/total_media" />


            <TextView
                android:id="@+id/total_media_item_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_text"
                android:layout_alignParentEnd="true"
                android:text="10 | 12" />


            <TextView
                android:id="@+id/average_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_media_item_text"
                android:text="Average Duration" />


            <TextView
                android:id="@+id/average_duration_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_media_item_text"
                android:layout_alignParentEnd="true"
                android:text="24 min" />

            <TextView
                android:id="@+id/format_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/average_duration_text"
                android:text="Format" />


            <TextView
                android:id="@+id/format_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/average_duration_text"
                android:layout_alignParentEnd="true"
                android:text="TV" />

            <TextView
                android:id="@+id/source_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/format_text"
                android:text="Source" />


            <TextView
                android:id="@+id/source_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/format_text"
                android:layout_alignParentEnd="true"
                android:text="Manga" />

            <TextView
                android:id="@+id/studio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/source_text"
                android:text="Studio" />


            <TextView
                android:id="@+id/studio_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/source_text"
                android:layout_alignParentEnd="true"
                android:text="Studio Pallete" />


            <TextView
                android:id="@+id/season_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studio_text"
                android:text="Season" />


            <TextView
                android:id="@+id/season_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studio_text"
                android:layout_alignParentEnd="true"
                android:text="Spring 2023" />


            <TextView
                android:id="@+id/start_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/season_text"
                android:text="Start Date" />


            <TextView
                android:id="@+id/start_date_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/season_text"
                android:layout_alignParentEnd="true"
                android:text="6 April, 2023" />


            <TextView
                android:id="@+id/end_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_date_text"
                android:text="End Date" />


            <TextView
                android:id="@+id/end_date_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_date_text"
                android:layout_alignParentEnd="true"
                android:text="\?\?" />

            <TextView
                android:id="@+id/synopsis_heading"
                style="?attr/textAppearanceHeadlineSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/end_date_text"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Synopsis" />

            <TextView
                android:id="@+id/synopsis_text_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/synopsis_heading"
                android:ellipsize="end"
                android:maxLines="8"
                tools:text="@tools:sample/lorem/random" />

        </RelativeLayout>

        <TextView
            android:id="@+id/synonyms_heading"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_container"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="18dp"
            android:text="Synonyms" />

        <HorizontalScrollView
            android:id="@+id/synonyms_chip_group_horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/synonyms_heading"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/synomyns_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/trailer"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/synonyms_chip_group_horizontal_scroll"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Trailer" />

        <androidx.cardview.widget.CardView
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/trailer"
            android:layout_marginHorizontal="18dp"
            app:cardCornerRadius="24dp">

            <TextView
                style="?attr/textAppearanceHeadlineMedium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Trailer Not Available \n (*_ _)äºº" />

            <androidx.media3.ui.PlayerView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/openings"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_container"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Openings" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/openings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/openings"
            android:layout_marginHorizontal="18dp" />


        <TextView
            android:id="@+id/endings"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/openings_recycler_view"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Endings" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/endings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/endings"
            android:layout_marginHorizontal="18dp" />

        <TextView
            android:id="@+id/genres_text"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/endings_recycler_view"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Genres" />

        <HorizontalScrollView
            android:id="@+id/genres_text_horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genres_text">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/genres_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tags_text"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/genres_text_horizontal_scroll"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Tags" />

        <HorizontalScrollView
            android:id="@+id/tags_horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tags_text">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tags_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp" />
        </HorizontalScrollView>


        <TextView
            android:id="@+id/characters_text"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tags_horizontal_scroll"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Characters" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/characters_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/characters_text"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/media_small_layout" />

        <TextView
            android:id="@+id/relations_text"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/characters_recycler_view"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Relations" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/relations_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relations_text"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/media_small_layout" />

        <TextView
            android:id="@+id/recommendation_text"
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relations_recycler_view"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Recommendation" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendation_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommendation_text"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/media_small_layout" />

    </RelativeLayout>
</ScrollView>
